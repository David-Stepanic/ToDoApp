@{
    ViewData["Title"] = "Home";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="card shadow-lg p-4 text-center" style="max-width: 800px; width: 100%;">
        <div class="card-body">
            <h1 class="card-title mb-3">My Tasks</h1>
            <p class="lead mb-4" style="font-style: italic;">
                "Organization is the key to success. Plan your days, take control, and make every moment count."
            </p>

            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">
                Create your first task
            </a>
        </div>
    </div>
</div>
