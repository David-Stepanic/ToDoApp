<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Tasks</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />

    
</head>
<body style="background: linear-gradient(135deg, #b19cd9, #9370db, #6a4cbf);">

    <div class="container">
        <header class="mb-5 text-dark">
                <nav class="navbar navbar-expand-lg navbar-light custom-navbar rounded shadow-sm px-3">

                <div class="container-fluid d-flex justify-content-between">

                    <div class="d-none d-lg-block" style="width:150px;"></div>

                    <a class="navbar-brand ms-lg-auto fw-bold fs-2 text-dark" asp-controller="Home" asp-action="Welcome">
                        ToDoApp
                    </a>

                    <ul class="navbar-nav d-flex flex-row ms-auto">
                        @if (User.Identity.IsAuthenticated) 
                        {
                            <li class="nav-item me-2">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="custom-btn">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-4">
                                <a class="custom-btn" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="custom-btn" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
        </header>
        <main>
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


